<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="characterSheetViewModel"
            type="de.buadrabas.dnd_companion.ui.main.characterSheet.CharacterSheetViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.characterSheet.CharacterSheetFragment">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?colorPrimary"
            app:expandedTitleMarginEnd="64.0dip"
            app:expandedTitleMarginStart="48.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:statusBarScrim="?colorAccent">

            <ImageView
                android:id="@+id/character_portrait_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/characterpicture"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:srcCompat="@drawable/barb01_l" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/character_sheet_toolbar"
                android:layout_width="fill_parent"
                android:layout_height="100.0dip"
                android:gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleMarginTop="12.0dip" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                app:tabIndicatorColor="?colorAccent"
                app:tabMode="scrollable" />

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:shadowColor="#80000000"
                android:shadowDx="0.5"
                android:shadowDy="0.5"
                android:shadowRadius="8.0"
                android:textAppearance="@style/TextAppearance.DungeonTheme.Headline1"
                android:textColor="@android:color/white"
                android:textSize="21.0sp"
                app:layout_collapseMode="pin"
                tools:text="Testo Testa" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collapsing_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>