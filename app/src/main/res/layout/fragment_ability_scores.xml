<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/ability_line_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ability_score_0"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_0"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_0"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_line_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ability_line_0">

        <TextView
            android:id="@+id/ability_score_1"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_1"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_line_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ability_line_1">

        <TextView
            android:id="@+id/ability_score_2"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_2"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_2"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_line_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ability_line_2">

        <TextView
            android:id="@+id/ability_score_3"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_3"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_3"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_line_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ability_line_3">

        <TextView
            android:id="@+id/ability_score_4"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_4"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_4"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability_line_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ability_line_4">

        <TextView
            android:id="@+id/ability_score_5"
            android:layout_width="100sp"
            android:layout_height="50sp"
            app:autoSizeTextType="uniform"
            tools:text="ability_score_0" />

        <TextView
            android:id="@+id/ability_mod_5"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:autoSizeTextType="uniform"
            tools:text="ability_mod_0" />

        <Spinner
            android:id="@+id/spinner_5"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/rerollAbilitiesButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/reroll_button_description"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ability_line_5"
        app:srcCompat="@drawable/ic_cubes" />


</androidx.constraintlayout.widget.ConstraintLayout>