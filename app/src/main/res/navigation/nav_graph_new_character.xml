<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_character_navigation.xml"
    app:startDestination="@id/nav_new_chara">
    <fragment
        android:id="@+id/nav_new_chara"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterBuilder.CharacterBuilderFragment"
        android:label="@string/menu_overview_chara"
        tools:layout="@layout/fragment_character_builder">
        <action
            android:id="@+id/action_nav_new_chara_to_nav_ability_score"
            app:destination="@id/nav_ability_score" />
        <action
            android:id="@+id/action_nav_new_chara_to_nav_choose_skill"
            app:destination="@id/nav_choose_skill" />
        <action
            android:id="@+id/action_nav_new_chara_to_nav_choose_class"
            app:destination="@id/nav_choose_class" />
        <action
            android:id="@+id/action_nav_new_chara_to_nav_choose_race"
            app:destination="@id/nav_choose_race" />
        <action
            android:id="@+id/action_nav_new_chara_to_nav_choose_feat"
            app:destination="@id/nav_choose_feat" />
    </fragment>
    <fragment
        android:id="@+id/nav_ability_score"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterAbilities.AbilityScoresFragment"
        android:label="nav_ability_score"
        tools:layout="@layout/fragment_ability_scores">
        <action
            android:id="@+id/action_nav_ability_score_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>

    <fragment
        android:id="@+id/nav_choose_race"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterRace.ChooseRaceFragment"
        android:label="nav_choose_race"
        tools:layout="@layout/fragment_choose_race">
        <action
            android:id="@+id/action_nav_choose_race_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>
    <fragment
        android:id="@+id/nav_choose_class"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterClass.CharacterClassFragment"
        android:label="nav_choose_class"
        tools:layout="@layout/fragment_choose_class">
        <action
            android:id="@+id/action_nav_choose_class_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>
    <fragment
        android:id="@+id/nav_choose_skill"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterSkills.SkillFragment"
        android:label="nav_choose_skill"
        tools:layout="@layout/fragment_skill_list">
        <action
            android:id="@+id/action_nav_choose_skill_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>
    <fragment
        android:id="@+id/nav_choose_feat"
        android:name="de.buadrabas.dnd_companion.ui.newCharacter.characterFeat.FeatFragment"
        android:label="nav_choose_race"
        tools:layout="@layout/fragment_feat_list">
        <action
            android:id="@+id/action_nav_choose_feat_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>
</navigation>