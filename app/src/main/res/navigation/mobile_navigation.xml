<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_over_view">

    <fragment
        android:id="@+id/nav_over_view"
        android:name="de.buadrabas.dnd_companion.ui.fragments.CharaOverviewFragment"
        android:label="@string/menu_overview_chara"
        tools:layout="@layout/fragment_chara_overview" >
        <action
            android:id="@+id/action_nav_over_view_to_nav_new_chara"
            app:destination="@id/nav_new_chara" />
    </fragment>

    <fragment
        android:id="@+id/nav_dice"
        android:name="de.buadrabas.dnd_companion.ui.fragments.DiceRollerFragment"
        android:label="@string/menu_dice"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_dice_to_nav_over_view"
            app:destination="@id/nav_over_view" />
    </fragment>

    <fragment
        android:id="@+id/nav_new_chara"
        android:name="de.buadrabas.dnd_companion.ui.fragments.CharacterBuilderFragment"
        android:label="New Character"
        tools:layout="@layout/fragment_character_builder" />

</navigation>